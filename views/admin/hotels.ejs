<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Hotels</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="navbar">
        <h1>Manage Hotels</h1>
        <div>
            <% if (user.role === 'Main Admin') { %>
                <a href="/hotels/add">Add New Hotel</a>
            <% } %>
            <a href="/auth/logout">Logout</a>
        </div>
    </div>
    
    <div class="container">
        <h2>Registered Hotels</h2>

        <% if (hotels.length === 0) { %>
            <p>No hotels registered yet.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Hotel Name</th>
                        <th>Address</th>
                        <th>Logo</th>
                        <th>QR Code</th>
                    
                    </tr>
                </thead>
                <tbody>
                    <% hotels.forEach(hotel => { %>
                        <tr>
                            <td><%= hotel.name %></td>
                            <td><%= hotel.address %></td>
                            <td>
                                <% if (hotel.logo) { %>
                                    <img src="/uploads/<%= hotel.logo %>" alt="Hotel Logo" style="width: 100px;">
                                <% } else { %>
                                    No Logo
                                <% } %>
                            </td>
                            <td>
                                <% if (hotel.qrCode) { %>
                                    <img src="<%= hotel.qrCode %>" alt="QR Code" style="width: 100px; height: 100px;">
                                <% } else { %>
                                    No QR Code Available
                                <% } %>
                            </td>
                            
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <script src="/js/scripts.js"></script>
</body>
</html>
